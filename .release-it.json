{
    "github": {
        "release": false
    },
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}"
    },
    "hooks": {
        "after:bump": "powershell -Command \"(Get-Content config/version.php) -replace \"'version' => '.*'\", \"'version' => '${version}'\" | Set-Content config/version.php\""
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}